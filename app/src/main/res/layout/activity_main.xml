<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#434343"
    tools:context=".MainActivity">


    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/skeleton"
        android:layout_width="190dp"
        android:layout_height="225dp"
        android:src="@drawable/bone_lauron"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/hero"
        android:layout_width="156dp"
        android:layout_height="169dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="216dp"
        android:src="@drawable/knight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/heroTxt"
        android:layout_width="239dp"
        android:layout_height="21dp"
        android:layout_marginBottom="212dp"
        android:text='Sir Marvinius "First of His Name"'
        android:textColor="#dcdcdc"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtHeroHP"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="HP"
        android:textColor="#dcdcdc"
        app:layout_constraintEnd_toEndOf="@+id/heroTxt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/heroTxt"
        app:layout_constraintTop_toBottomOf="@+id/heroTxt" />

    <TextView
        android:id="@+id/txtHeroDmg"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="DPT"
        android:textColor="#dcdcdc"
        app:layout_constraintEnd_toEndOf="@+id/txtHeroHP"
        app:layout_constraintStart_toStartOf="@+id/txtHeroHP"
        app:layout_constraintTop_toBottomOf="@+id/txtHeroHP" />

    <TextView
        android:id="@+id/monsterTxt"
        android:layout_width="193dp"
        android:layout_height="28dp"
        android:layout_marginTop="204dp"
        android:text='Khaxhe "King of all Kings"'
        android:textColor="#dcdcdc"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtMonstrHP"
        android:layout_width="123dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="HP"
        android:textColor="#dcdcdc"
        app:layout_constraintStart_toStartOf="@+id/monsterTxt"
        app:layout_constraintTop_toBottomOf="@+id/monsterTxt" />

    <TextView
        android:id="@+id/txtMonstrDmg"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="DPT"
        android:textColor="#dcdcdc"
        app:layout_constraintStart_toStartOf="@+id/txtMonstrHP"
        app:layout_constraintTop_toBottomOf="@+id/txtMonstrHP" />

    <Button
        android:id="@+id/btnAttack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#9A3030"
        android:text="Attack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtCombatLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text=""
        android:textColor="#dcdcdc"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnAttack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>